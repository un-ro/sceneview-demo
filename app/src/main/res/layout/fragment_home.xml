<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ar_cursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AR Cursor"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ar_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AR Model Viewer"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3D Model Viewer"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ar_anchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AR Cloud Anchor"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

</LinearLayout>